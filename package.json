{
  "scripts": {
    "clean": "rm -rf docs",
    "clean-md": "find md -name '*.html' -type f -delete",
    "assets": "cp -r assets docs/",
    "build-ghp": "npx @marp-team/marp-cli@latest --bespoke.progress true --theme-set styles/ -I md --html --allow-local-files -o docs",
    "watch:md": "marp --theme-set styles/ --html --watch -I md  --html -o docs",
    "serve:html": "live-server docs --watch=docs --mount=/assets:assets",
    "preprocess": "node preprocess.js",
    "start": "concurrently npm:preprocess npm:watch:md npm:serve:html"
  },
  "dependencies": {
    "@marp-team/marpit": "^3.1.3",
    "chokidar": "^4.0.3",
    "live-server": "^1.2.2",
    "markdown-it": "^14.1.0",
    "markdown-it-implicit-figures": "^0.12.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
